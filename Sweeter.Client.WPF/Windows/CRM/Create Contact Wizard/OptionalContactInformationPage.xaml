<Page x:Class="Sweeter.Client.WPF.OptionalContactInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sweeter.Client.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Optional Contact Info"
      d:DataContext="{Binding Source={x:Static local:CustomerDesignViewModel.Instance}}">

    <StackPanel>
        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</Page>
