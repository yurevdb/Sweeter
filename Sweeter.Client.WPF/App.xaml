<Application x:Class="Sweeter.Client.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sweeter.Client.WPF"
             StartupUri="Windows/Base/Hub.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colours.xaml"/>
                <ResourceDictionary Source="Styles/Sizes.xaml"/>
                <ResourceDictionary Source="Styles/Fonts.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/InputControls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:IocContainer x:Key="IocContainer"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
